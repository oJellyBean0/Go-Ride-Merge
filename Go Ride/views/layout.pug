doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title #{title} - Go Ride
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/simple-sidebar.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
  body
    #wrapper
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='/') Go Ride
          li
            a(href='#') Example Link
          li
            a(href="/login") Login
      #page-content-wrapper
        .container-fluid
          block content
          hr
          footer
          p &copy; #{year} - Go Ride

    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/respond.js')

    block scripts
