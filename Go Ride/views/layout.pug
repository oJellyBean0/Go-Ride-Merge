doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title #{title} - Go Ride
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/simple-sidebar.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
  body
    #wrapper
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='/') Go Ride
          li
            a(href='/login') Login
          li
            a(data-toggle="collapse", aria-expanded="false", id="manUser", data-target="#manUserSubmenu") Manage User
            ul.nav.collapse(aria-labelledby="btn-1", role="menu", id="manUserSubmenu")
              li
                a(href='/userDetails') User Details
              li
                a(href='/manageLocations') Locations
              li
                a(href='/contacts') Contacts
              li
                a(href='/') Block User
              li
                a(href='/') Delete User
              li
                a(href='/') View Profile
          li
            a(href='/manageEvent') Events

      #page-content-wrapper
        .container-fluid
          a(href="#menu-toggle").btn-sm.hidden-lg.hidden-md#menu-toggle
            img(width='20px' src='/images/menu-alt-512.png') 
          block content
          hr
          footer
          p &copy; #{year} - Go Ride

    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/respond.js')
    script(src='/javascripts/menu-toggle.js')

    block scripts
