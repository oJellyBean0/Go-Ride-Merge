extends layout
block content
    div.modal-dialog
        div.modal-header
            img.img-responsive.img-circle(src='http://api.randomuser.me/portraits/men/49.jpg', alt='Scott Stevens')
            h2.text-center USERNAME GOES HERE
        form.div.modal-body(action="", method="post")

            div.row
                div.col-md-6.span6
                    label(for="username") Name
                div.col-md-6.span6.pull-right
                    input#username.form-control(type="text", name="username", required)

            div.row
                div.col-md-6.span6
                    label(for="username") Surname
                div.col-md-6.span6.pull-right
                    input#username.form-control(type="text", name="username", required)

            div.row
                div.col-md-6.span6
                    label(for="username") Username
                div.col-md-6.span6.pull-right
                    input#username.form-control(type="text", name="username", required)

            div.row
                div.col-md-6.span6
                    label(for="username") Password
                div.col-md-6.span6.pull-right
                    input#username.form-control(type="text", name="username", required)

        div.modal-footer
            div.row
                div.col-md-4.clearfix
                    button.btn.button-primary.pull-left(type="submit") Cancel
                div.col-md-4.clearfix.text-center
                    button.btn.button-primary(type="submit") Cancel
                div.col-md-4.clearfix
                    button.btn.button-primary.pull-right(type="submit") Cancel
