extends layout
block content

    div.modal-dialog
        div.modal-header
            div.row
                h2.text-center(id="usernameHeading") USERNAME GOES HERE
            div.row.text-center
                img.center-block.img-responsive.img-circle(src='http://api.randomuser.me/portraits/men/49.jpg', alt='Scott Stevens')
            
        form.div.modal-body(action="", method="post")

            div.row
                div.col-md-4.span4
                    label(for="username") Name:
                div.col-md-8.span8.pull-right
                    span.pull-right
                        aria(type="text", name="name", id="name") *place holder*

            div.row
                div.col-md-4.span4
                    label(for="username") Surname:
                div.col-md-8.span8.pull-right
                    span.pull-right
                        aria(type="text", name="surname", id="surname") *place holder*

            div.row
                div.col-md-4.span4
                    label(for="username") Username:
                div.col-md-8.span8.pull-right
                    span.pull-right
                        aria(type="text", name="username", id="username") *place holder*

            div.row
                div.col-md-4.span4
                    label(for="username") Password:
                div.col-md-8.span8.pull-right
                    span.pull-right
                        aria(type="text", name="password", id="password") *place holder*

        div.modal-footer
            div.row
                div.col-md-4.clearfix
                    //button.btn.button-primary.pull-left(type="submit") Cancel
                div.col-md-4.clearfix.text-center
                    button.btn.button-primary(data-toggle='modal', data-target='#modalEdit', id='buttonEdit') Edit
                div.col-md-4.clearfix
                    //button.btn.button-primary.pull-right(type="submit") Cancel


    .modal#modalEdit(tabindex='-1', role='dialog', aria-labelledby='modalEditLabel1', aria-hidden='true')
        .modal-dialog(role='document')
            form.modal-content(id="info", name="info", method="post", action="", autocomplete="on", enctype="text/plain")
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;         
                    h4.Label1.modal-title Edit Details?      
                .modal-body
                    div.modal-dialog(style="padding-top:0px")
                        div.modal-header
                            h2(id="usernameHeading") *User name goes here*
                        div.modal-body
                            br
                            div.row
                                div.col-md-4.span4
                                    label(for="nameInput") Name
                                div.col-md-8.span8.pull-right
                                    input.form-control(type="text", name="nameInput", id="nameInput", readonly )

                            div.row
                                div.col-md-4.span4
                                    label(for="surnameInput") Surname
                                div.col-md-8.span8.pull-right
                                    input.form-control(type="text", name="surnameInput", id="surnameInput", readonly)

                            div.row
                                div.col-md-4.span4
                                    label(for="usernameInput") Username
                                div.col-md-8.span8.pull-right
                                    input.form-control(type="text", name="usernameInput", id="usernameInput", readonly)

                            div.row
                                div.col-md-4.span4
                                    label(for="passwordInput") Password
                                div.col-md-8.span8.pull-right
                                    input.form-control(type="password", name="passwordInput", id="passwordInput", required)       
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
                    |         
                    button.btn.btn-primary(type='submit', id='submitUserDetails') Save

block scripts
    script(src='/javascripts/userDetails.js')